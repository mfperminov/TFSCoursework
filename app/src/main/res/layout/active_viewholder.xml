<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="200dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/active_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/golden_horse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/active_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="#9299a2"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/active_image"
        tools:text="НОЯБ 2018 Г. " />

    <TextView
        android:id="@+id/active_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/active_date"
        tools:text="Осенние стажировки" />

    <TextView
        android:id="@+id/active_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.02"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/active_date"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#6cd6a2"
        tools:text="СПЕЦКУРС" />

</androidx.constraintlayout.widget.ConstraintLayout>