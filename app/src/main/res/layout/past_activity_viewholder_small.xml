<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_default_height">

    <ImageView
        android:id="@+id/activity_sign"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_school_sign" />

    <TextView
        android:id="@+id/activity_type_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/activity_sign"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/activity_sign"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="#9299a2"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Школьникам" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_type_subtitle"
        android:layout_alignStart="@id/activity_type_subtitle"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:lines="1"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Интернет-олимпиада мехмата" />

</RelativeLayout>